# =============================================================================
# GCP GKE -- Example Variable Values
# =============================================================================
# Copy this file to terraform.tfvars and customize for your environment.
# =============================================================================

# GCP project ID (required)
project_id = "my-gcp-project-id"

# GCP region for all resources
region = "us-central1"

# Name for the GKE cluster
cluster_name = "autonomi"

# Machine type for worker nodes
# Recommended: e2-standard-2 (2 vCPU, 8 GiB) for dev, e2-standard-4 for production
machine_type = "e2-standard-2"

# Number of nodes per zone (GKE distributes across zones in a region)
node_count = 1

# Domain name for the Autonomi dashboard (leave empty to skip ingress setup)
# domain_name = "autonomi.example.com"
