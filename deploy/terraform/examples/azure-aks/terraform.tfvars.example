# =============================================================================
# Azure AKS -- Example Variable Values
# =============================================================================
# Copy this file to terraform.tfvars and customize for your environment.
# =============================================================================

# Azure region for all resources
location = "eastus"

# Azure resource group name
resource_group_name = "autonomi-rg"

# Name for the AKS cluster
cluster_name = "autonomi"

# VM size for worker nodes
# Recommended: Standard_D2s_v3 (2 vCPU, 8 GiB) for dev, Standard_D4s_v3 for production
node_vm_size = "Standard_D2s_v3"

# Number of worker nodes (3 recommended for HA)
node_count = 3

# Domain name for the Autonomi dashboard (leave empty to skip ingress setup)
# domain_name = "autonomi.example.com"
