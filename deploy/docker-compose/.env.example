# Autonomi Enterprise - Environment Configuration
# Copy this file to .env and fill in the values you need.
#
#   cp .env.example .env
#
# All variables are optional unless noted. Defaults are shown after the = sign.

# ---------------------------------------------------------------------------
# Dashboard
# ---------------------------------------------------------------------------

# Port to expose the Autonomi dashboard on the host
LOKI_DASHBOARD_PORT=57374

# ---------------------------------------------------------------------------
# LLM Providers (at least one is required)
# ---------------------------------------------------------------------------

# Anthropic Claude
ANTHROPIC_API_KEY=

# OpenAI (Codex CLI)
OPENAI_API_KEY=

# Google (Gemini CLI)
GOOGLE_API_KEY=

# ---------------------------------------------------------------------------
# Audit and Compliance
# ---------------------------------------------------------------------------

# Enable audit logging (default: true)
LOKI_AUDIT_ENABLED=true

# ---------------------------------------------------------------------------
# Enterprise Authentication
# ---------------------------------------------------------------------------

# Enable OIDC-based authentication for the dashboard (default: false)
LOKI_ENTERPRISE_AUTH=false

# OIDC provider issuer URL (e.g. https://accounts.google.com)
LOKI_OIDC_ISSUER=

# OIDC client ID registered with your identity provider
LOKI_OIDC_CLIENT_ID=

# ---------------------------------------------------------------------------
# Observability (requires --profile observability)
# ---------------------------------------------------------------------------

# OTLP endpoint for sending traces from the autonomi service.
# When using the bundled OTEL collector, set to http://otel-collector:4318
LOKI_OTEL_ENDPOINT=

# ---------------------------------------------------------------------------
# Slack Integration
# ---------------------------------------------------------------------------

# Slack Bot User OAuth Token (starts with xoxb-)
LOKI_SLACK_BOT_TOKEN=

# Slack Signing Secret for verifying incoming requests
LOKI_SLACK_SIGNING_SECRET=

# ---------------------------------------------------------------------------
# Microsoft Teams Integration
# ---------------------------------------------------------------------------

# Incoming webhook URL for posting messages to Teams
LOKI_TEAMS_WEBHOOK_URL=

# Webhook secret for verifying outbound message signatures
LOKI_TEAMS_WEBHOOK_SECRET=

# ---------------------------------------------------------------------------
# Jira Integration
# ---------------------------------------------------------------------------

# Jira instance URL (e.g. https://mycompany.atlassian.net)
LOKI_JIRA_URL=

# Jira API token or personal access token
LOKI_JIRA_TOKEN=
